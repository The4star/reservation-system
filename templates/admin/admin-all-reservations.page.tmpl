{{template "admin" .}}

{{define "css" }}
<link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" type="text/css">
{{end}}

{{define "page-title"}}
    All Reservations
{{end}}

{{define "content"}}
    <div class="col-md-12">
        {{$reservations := index .Data "reservations"}}
        <table class="table table-striped table-hover" id="res-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Last Name</th>
                    <th>Room</th>
                    <th>Arrival</th>
                    <th>Departure</th>
                </tr>
            </thead>
            <tbody>
                {{range $reservations}}
                <tr>
                    <td>{{.ID}}</td>
                    <td>
                        <a href="/admin/reservations/all/{{.ID}}">
                            {{.LastName}}
                        </a>
                    </td>
                    <td>{{.Room.RoomName}}</td>
                    <td>{{niceDate .StartDate}}</td>
                    <td>{{niceDate .EndDate}}</td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>
{{end}}

{{define "js"}}
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" type="text/javascript"></script>
<script src="/static/scripts/admin/reservations.js" type="module" defer></script>
{{end}}